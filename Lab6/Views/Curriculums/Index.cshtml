@model IEnumerable<Curriculum>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Semester)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Course)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.HoursAmount)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.HasExam)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Professor)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SpecialtyNavigation)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SubjectNavigation)
		</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Semester)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Course)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.HoursAmount)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.HasExam)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Professor.PersonNavigation.Surname)
				@Html.DisplayFor(modelItem => item.Professor.PersonNavigation.Name)
				@Html.DisplayFor(modelItem => item.Professor.PersonNavigation.Middlename)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SpecialtyNavigation.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SubjectNavigation.Name)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
				<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
				<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
	}
	</tbody>
</table>