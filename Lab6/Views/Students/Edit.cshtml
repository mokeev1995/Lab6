@model Student

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
	<div class="form-horizontal">
		<h4>Student</h4>
		<hr/>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Id"/>
		<div class="form-group">
			<label asp-for="Person" class="control-label col-md-2"></label>
			<div class="col-md-10">
				<select asp-for="Person" class="form-control" asp-items="ViewBag.Person"></select>
				<span asp-validation-for="Person" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="StudentsGroup" class="control-label col-md-2"></label>
			<div class="col-md-10">
				<select asp-for="StudentsGroup" class="form-control" asp-items="ViewBag.StudentsGroup"></select>
				<span asp-validation-for="StudentsGroup" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default"/>
			</div>
		</div>
	</div>
</form>

<div>
	<a asp-action="Index">Back to List</a>
</div>