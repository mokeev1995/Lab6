@model Student

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
	<div class="form-horizontal">
		<h4>Student</h4>
		<hr/>
