			<label asp-for="Person" class="col-md-2 control-label"></label>
			<div class="col-md-10">
				<select asp-for="Person" class="form-control" asp-items="ViewBag.Person"></select>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="StudentsGroup" class="col-md-2 control-label"></label>
			<div class="col-md-10">
				<select asp-for="StudentsGroup" class="form-control" asp-items="ViewBag.StudentsGroup"></select>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default"/>
			</div>
		</div>
	</div>
</form>

